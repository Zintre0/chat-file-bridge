{
  "manifest_version": 3,
  "name": "File Bridge Terminal",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["file-bridge.js"],
    "run_at": "document_end"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/connected-16.png",
      "48": "icons/connected-48.png", 
      "128": "icons/connected-128.png"
    },
    "default_title": "File Bridge Terminal"
  },
  "icons": {
    "16": "icons/connected-16.png",
    "48": "icons/connected-48.png",
    "128": "icons/connected-128.png"
  }
}